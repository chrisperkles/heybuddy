# heyBuddy Environment Configuration
# Copy this file to .env and configure your settings

# Application settings
ENVIRONMENT=development
SECRET_KEY=your-secret-key-here-change-this-to-something-secure
DEBUG=true

# OpenAI API settings
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.7

# API server settings
API_HOST=0.0.0.0
API_PORT=8080

# Audio settings
AUDIO_DEVICE=mock
SAMPLE_RATE=16000
CHUNK_SIZE=1024

# Database settings
DATABASE_URL=sqlite:///./data/heybuddy.db

# Safety settings
ENABLE_MODERATION=true
MAX_CONVERSATION_LENGTH=10
CONVERSATION_TIMEOUT=300

# Logging settings
LOG_LEVEL=INFO
LOG_FILE=

# Systemd settings (for production)
ENABLE_SYSTEMD_NOTIFY=false
HEALTH_CHECK_INTERVAL=30